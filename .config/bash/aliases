# shellcheck shell=bash

alias e=emacs
alias mkdir="mkdir -pv"
alias g="grep -rn --color=auto"
alias ncdu="ncdu -x --confirm-quit --color dark"

alias +x="chmod -v u+x"

alias hl="highlight"

alias dotfiles='/usr/bin/git --git-dir=$HOME/.local/share/.dotfiles.git/ --work-tree=$HOME'
alias doxfiles='/usr/bin/git --git-dir=$HOME/.local/share/.doxfiles.git/ --work-tree=$HOME'

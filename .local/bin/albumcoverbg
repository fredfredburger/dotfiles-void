#!/bin/sh

musicdir="$HOME/music"

img=$(find "$musicdir/$(dirname "$(mpc current -f "%file%")")/" -maxdepth 1 \
           -type f  -iname "*png" -o -iname "*jpg" | head -1 )
### TODO: Ignore back covers
### TODO: Find biggest image if >1

if [ -f "$img" ]; then
    rewal -i "$img"
    exit 0
else
    notify-send "$(basename "$0")" "Didn't find cover"
    exit 1
fi
